# Brew Bundle Add
bba() {
    if [ $# -eq 0 ]; then
        echo "Usage: bba <formula>"
        return 1
    fi
    brew bundle --global add "$@"
    bbs
    brew install "$@"
}

bbr() {
    if [ $# -eq 0 ]; then
        echo "Usage: bbr <formula>"
        return 1
    fi
    brew bundle --global remove "$@"
    brew uninstall "$@"
}

# Claude
claude() {
    if [ "$1" = "--yolo" ] || [ "$1" = "-y" ]; then
        shift
        /opt/homebrew/bin/claude --dangerously-skip-permissions "$@"
    else
        /opt/homebrew/bin/claude "$@"
    fi
}

